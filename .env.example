# Enphase Envoy to MQTT Configuration
# Copy this file to .env and update with your actual values
# This file should NOT be committed to git (already in .gitignore)

# MQTT Broker Settings
MQTT_HOST=ip.address.of.mqtt.broker
MQTT_PORT=1883
MQTT_USER=mqtt.user
MQTT_PASSWORD=mqtt.password
MQTT_TOPIC=/envoy/json

# Enphase Envoy Settings
ENVOY_HOST=envoy.local
ENVOY_USER=your.enphase.email@example.com
ENVOY_PASSWORD=legacy.field
ENVOY_USER_PASS=your.enphase.password

# Optional Features
USE_FREEDS=False
DEBUG=False
BATTERY_INSTALLED=False

# Publishing Settings
PUBLISH_INTERVAL=0  # How often to publish to MQTT in seconds (0 = no delay, publishes immediately)
